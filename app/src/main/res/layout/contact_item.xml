<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/screen_padding"
    android:background="@drawable/layout_decorator"
    android:orientation="horizontal"
    android:padding="@dimen/screen_padding">

    <ImageView
        android:id="@+id/contact_image"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/contact_picture_size"
        android:layout_height="@dimen/contact_picture_size"
        android:layout_weight="0"
        android:src="@drawable/contact"
        android:contentDescription="@string/contact_image_description"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/screen_padding">

        <TextView
            android:id="@+id/contact_name"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/contact_name_layout_size"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/contact_name_text_size"
            tools:text="Иванов Иван Иванович" />

        <TextView
            android:id="@+id/contact_phone"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/contact_phone_layout_size"
            android:textSize="@dimen/contact_phone_text_size"
            tools:text="+7 (568) 123-45-78" />

    </LinearLayout>

</LinearLayout>